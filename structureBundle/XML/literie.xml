<?xml version="1.0"?>
<site>
    <admin>
        <navBar id="marques">
            <title>Marques</title>
            <toolBar>
                <button class="add-btn"/>
                <button class="att-btn"/>
                <url>literie_marques</url>
            </toolBar>
            <displayContent>
                <type>miniatured</type>
                <distinctClass>marques_display</distinctClass>
                <entity>Marque</entity>
                <template>marque</template>
                <srcUrl>../../bundles/euroliteriestructure/images/marques</srcUrl>
            </displayContent>
        </navBar>
        <navBar id="promotions">
            <title>Promotions</title>
            <toolBar>
                <button class="add-btn"/>
                <button class="att-btn"/>
                <url>literie_accueil</url>
            </toolBar>
            <displayContent>
                <type>miniatured</type>
                <distinctClass>promotions_display</distinctClass>
                <entity>Promotion</entity>
                <template>promotion</template>
            </displayContent>
        </navBar>
        <navBar id="keyword">
            <title>Mot-Clés</title>
            <toolBar></toolBar>
            <displayContent>
                <type>miniatured_keywords</type>
                <distinctClass>keywords_display</distinctClass>
                <xml>keyword</xml>
                <entity bundle="false" champ="keyworlds">Page</entity>
                <template>keyword</template>
            </displayContent>
        </navBar>
        <navBar id="sliderA">
            <title>Slider</title>
            <toolBar>
                <button class="att-btn"/>
                <url>literie_accueil</url>
            </toolBar>
            <displayContent>
                <type>dragDrop</type>
                <distinctClass>slider_display</distinctClass>
                <dossiers>
                    <dossier src="active" >slider/active</dossier>
                    <dossier src="inactive" >slider/inactive</dossier>
                </dossiers>
                <template>dragDrop</template>
                <srcUrl>../../bundles/euroliteriestructure/images/slider</srcUrl>
            </displayContent>
        </navBar>
        <navBar id="horaires">
            <title>Horaires</title>
            <toolBar>
                <button class="att-btn" />
                <url>literie_contact</url>
            </toolBar>
            <displayContent>
                <type>online</type>
                <distinctClass>horaire_display</distinctClass>
                <entity xml="true" repo="true">Horaire</entity>
                <repo>EuroLiterie\structureBundle\Entity\HoraireRepo</repo>
                <template>horaire</template>
                <!--<script>bundles/euroliteriestructure/js/AppendOnline/horaire</script>-->
                <script>horaire</script>
            </displayContent>
        </navBar>
        <navBar id="equipe">
            <title>Equipe</title>
            <toolBar>
                <button class="add-btn"/>
                <button class="att-btn"/>
                <url>literie_magasin</url>
            </toolBar>
            <displayContent>
                <type>miniatured</type>
                <distinctClass>equipe_display</distinctClass>
                <entity bundle="false" champ="tagName" tag="equipe">Article</entity>
                <template>equipe</template>
                <srcUrl>../../bundles/euroliteriestructure/images/equipe</srcUrl>
            </displayContent>
        </navBar>
        <navBar id="magasin">
            <title>Magasin</title>
            <toolBar>
                <button class="att-btn"/>
                <url>literie_magasin</url>
            </toolBar>
            <displayContent>
                <type>dragDrop</type>
                <distinctClass>magasin_display</distinctClass>
                <dossiers>
                    <dossier src="active">galerie/magasin/active</dossier>
                    <dossier src="inactive">galerie/magasin/inactive</dossier>
                </dossiers>
                <srcUrl>../../bundles/euroliteriestructure/images/galerie/magasin</srcUrl>
                <template>dragDrop</template>
            </displayContent>
        </navBar>
    </admin>
    <keyword>Salut, noob</keyword>
</site>
